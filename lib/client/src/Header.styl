@import 'box'
@import 'pos'
@import 'logstyles'

header-height = 22px

.Header
  background-color #333
  font-size 10px
  height header-height
  line-height header-height + 2px
  padding 2px 5px 2px 5px

  > span
    display inline-block
    margin 0 10px 0 2px

  > .context
    width log-context-size

  > .ip
    width log-ip-size
    margin 0 10px 0 0

  > .date
    width log-date-size

  > .siteid
    width log-siteid-size
    text-align right
  
  > .cat
    width log-cat-size